@model  WorldLive.Web.Models.Home.IndexModel
@{
    ViewData["Title"] = "直播世界截图";
}
<style>
    h1 {
        padding: 10px;
        text-decoration: none;
        font-family: 'Microsoft YaHei';
    }

    a {
        padding: 10px;
        font-size: 24px;
        text-decoration: none;
        font-family: 'Microsoft YaHei';
    }
</style>
<div style="width:100%; text-align:center;">
    <h1>点击日期查看截图</h1>
    @for (int i = 0; i < Model.Folders.Length; i++)
    {
        <p><a href='/Home/Screenshots?folder=@Model.Folders[i].Name'>@Model.Folders[i].Name</a></p>
    }
</div>